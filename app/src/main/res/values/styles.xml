<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="CustomButtonStyle">
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textColor">#efefef</item>-->
        <!--<item name="android:shadowColor">#454545</item>-->
        <!--<item name="android:shadowDx">5</item>-->
        <!--<item name="android:shadowDy">5</item>-->
        <!--<item name="android:shadowRadius">0.6</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>

        <!--<item name="android:background">@drawable/custom_button2</item>-->
    </style>

    <style name="CustomTimerStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">50sp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorDarkBackground</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="CustomOneClockTimerStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">50sp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorLightBackground</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="CustomInfoStyle">
        <item name="android:textColor">#ffffff</item>
        <!--<item name="android:textSize">50dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorDarkBackground</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>
